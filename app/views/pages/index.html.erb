<div class="relative min-h-screen bg-white text-gray-900">
  <!-- Hero Section with Split Screen -->
  <section class="h-screen flex items-center justify-between px-6 py-20 bg-gradient-to-r from-slate-200 via-slate-100 to-slate-50">
    <div class="w-full md:w-1/2 text-center md:text-left">
      <h1 class="text-5xl font-extrabold leading-tight mb-4 text-gray-700">
        Welcome to <span class="text-cookblue-100">Cookbase</span>
      </h1>
      <p class="text-xl mb-8 text-gray-700 max-w-xl mx-auto md:mx-0 px-4">
      Your digital cookbook, where recipes are organized, easily accessible, and ready to be discovered. Save and share your favorite meals in a few simple clicks.
      </p>

      <%= link_to 'Start Cooking Now', new_user_path, class: "bg-cookblue-200 hover:bg-cookblue-100 text-white font-semibold py-4 px-8 rounded-full text-lg transition duration-300 ease-in-out shadow-lg transform hover:scale-105" %>
    </div>

    <!-- Screenshot of App -->
    <div class="hidden md:block w-full md:w-3/4">
      <img src="<%= asset_path('screenshot_3.png') %>" alt="CookBase App Screenshot" class="rounded-lg shadow-2xl max-w-full">
    </div>
  </section>
</div>

