<head>
    <title>Login</title>
</head>
<body class="bg-gray-100">
    <div class="flex justify-center items-center f-screen">
        <div class="w-full max-w-md flex flex-col items-center bg-white p-8 rounded shadow-lg">
            <!-- Text Login -->
            <h1 class="text-center text-2xl font-bold text-gray-700 mb-6">LOGIN</h1>
            <%= form_with(url: login_path, local: true) do |form| %>
            <!-- Email Input -->
            <div class="w-full mb-6">
             <%= form.label :email, class: "form-label" %>
             <%= form.email_field :email, class: "w-full py-4 px-8 bg-slate-200 placeholder:font-semibold rounded hover:ring-1 outline-blue-500", placeholder: "Email" %>
            </div>
            <!-- Password Input -->
            <div class="w-full mb-6">
              <%= form.label :password, class: "form-label" %>
              <%= form.password_field :password, class: "w-full py-4 px-8 bg-slate-200 placeholder:font-semibold rounded hover:ring-1 outline-blue-500", placeholder: "Password" %>
            </div>
            <!-- Remember Input -->
            <div class="w-full flex flex-row justify-between items-center mb-6">
                <div class="flex items-center gap-x-1">
                    <%= form.check_box :remember, { id: "remember" }, true, false %>
                    <%= form.label :remember, "Remember me", class: "text-sm text-slate-400" %>
                </div>
                <div>
                    <%= link_to 'Forgot?', new_password_reset_path,  class: "text-sm text-slate-400 hover:text-blue-500" %>

                </div>
            </div>
            <!-- Button -->
            <div class="w-full mt-4">
                <%= form.submit "Login", class: "py-4 bg-cookblue-100 w-full rounded text-white font-bold hover:bg-cookblue-200 hover:text-gray-400" %>
            </div>
            <% end %>
            <br>
            <h1>Don't have an account?</h1>
            <%= link_to 'Sign Up', new_user_path, class: "font-bold" %>
        </div>
     </div>
</body>
</html>

