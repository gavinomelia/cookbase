<%= turbo_stream.replace "mobile_scaled_ingredients" do %>
  <div id="mobile_scaled_ingredients">
  <div class="mb-6 px-4 sm:px-6 lg:px-8">
            <h3 class="text-3xl text-gray-700 font-semibold mb-4">Ingredients</h3>
            <ul class="list-disc list-inside space-y-2">
    <% @scaled_ingredients.each do |ingredient| %>
      <p id="ingredient_<%= ingredient[:id] %>">
        <%= number_with_precision(ingredient[:scaled_quantity], precision: 2) %> - <%= ingredient[:name] %>
        </p>
<li class="flex items-center">
                  <span class="text-gray-700 font-medium">
                    <%= number_with_precision(ingredient[:scaled_quantity], precision: 2) %>  - <%= ingredient[:name] %>
                  </span>
                </li>

    <% end %>
  </div>
<% end %>

<%= turbo_stream.replace "desktop_scaled_ingredients" do %>
  <div id="desktop_scaled_ingredients">
    <% @scaled_ingredients.each do |ingredient| %>
      <p id="ingredient_<%= ingredient[:id] %>">
        <%= number_with_precision(ingredient[:scaled_quantity], precision: 2) %> - <%= ingredient[:name] %>
      </p>
    <% end %>
  </div>
<% end %>
